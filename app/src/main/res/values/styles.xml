<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditText.RoundedCorner" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_edittext_rounded</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="BottomSheetDialog.Cancelable" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetCancelableStyle</item>
    </style>

    <style name="bottomSheetCancelableStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_draggable">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="List.CustomCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
        <item name="cardElevation">@dimen/dp_8</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/dp_16</item>
        <item name="cornerSizeTopLeft">@dimen/dp_16</item>
        <item name="cornerSizeBottomRight">@dimen/dp_0</item>
        <item name="cornerSizeBottomLeft">@dimen/dp_0</item>
    </style>

    <style name="Button.RoundedTop" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_top_button_state</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TextView.Bold.Small" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Bold.Large" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>